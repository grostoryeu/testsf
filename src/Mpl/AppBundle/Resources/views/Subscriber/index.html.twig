<h1>Subscriber list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Email</th>
            <th>Ip</th>
            <th>Date_created</th>
            <th>Date_modified</th>
            <th>Genres</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('utilisateurs_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.email }}</td>
            <td>{{ entity.ip }}</td>
            <td>{% if entity.datecreated %}{{ entity.datecreated|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{% if entity.datemodified %}{{ entity.datemodified|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{{ entity.genres|join(',') }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('utilisateurs_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('utilisateurs_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('utilisateurs_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
